---
import type { HTMLAttributes } from "astro/types";
import { colorAccentClasses, colorBaseClasses } from "src/colors";
import { ACCENT_COLOR, BASE_COLOR } from "src/config";
import { cn } from "src/utils";

const { class: _className, ..._props } = Astro.props;
---

<div
  class={cn(
    "prose prose-img:rounded-xl dark:prose-invert prose-a:no-underline max-w-full",
    "prose-inline-code:bg-base-100 dark:prose-inline-code:bg-base-800 prose-inline-code:p-1 prose-inline-code:rounded-md",
    colorBaseClasses[BASE_COLOR],
    colorAccentClasses[ACCENT_COLOR],
    _className
  )}
  {..._props}
>
  <slot />
</div>
