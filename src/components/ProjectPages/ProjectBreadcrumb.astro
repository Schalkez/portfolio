---
interface Props {
  name: string;
  lang?: string;
}

const { name, lang = "vi" } = Astro.props;

const baseUrl = lang === "en" ? "/en" : "";
---

<nav aria-label="Breadcrumb" class="mb-8">
  <ol
    role="list"
    class="mx-auto flex max-w-2xl w-full items-center space-x-2 px-4 sm:px-6 md:max-w-5xl md:px-8"
  >
    <li>
      <div class="flex items-center">
        <a
          href={`${baseUrl}/#projects`}
          class="mr-2 text-sm font-medium text-neutral-900 hover:text-neutral-800 dark:text-neutral-100"
          >projects</a
        >
        <svg
          width="16"
          height="20"
          viewBox="0 0 16 20"
          fill="currentColor"
          aria-hidden="true"
          class="h-5 w-4 text-neutral-300"
        >
          <path d="M5.697 4.34L8.98 16.532h1.327L7.025 4.341H5.697z"></path>
        </svg>
      </div>
    </li>

    <li class="text-sm">
      <div class="font-medium text-neutral-500 dark:text-neutral-400">
        {name}
      </div>
    </li>
  </ol>
</nav>

<script
  type="application/ld+json"
  set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    itemListElement: [
      {
        "@type": "ListItem",
        position: 1,
        name: "Projects",
        item: `${Astro.site}${baseUrl}/#projects`,
      },
      {
        "@type": "ListItem",
        position: 2,
        name: name,
        item: Astro.url.toString(),
      },
    ],
  })}
/>
