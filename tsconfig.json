{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "$lib/*": ["src/lib/*"],
      "$components/*": ["src/components/*"],
      "$layouts/*": ["src/layouts/*"],
      "$pages/*": ["src/pages/*"],
      "$styles/*": ["src/styles/*"],
      "$assets/*": ["src/assets/*"],
      "$scripts/*": ["src/scripts/*"],
      "$examples/*": ["src/examples/*"]
    }
  },
  "exclude": ["dist"]
}
